{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "../src",
    "paths": {
      "types": ["types/types.d.ts"] // Adjust the relative path to the frontend `src/types.d.ts`
    },
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
