{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "../src",
    "paths": {
      "types": ["components/Types/types.ts"] // Adjust the relative path to the frontend `src/types.d.ts`
    },
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "../src/components/Types/types.ts"],
  "exclude": ["node_modules", "dist"]
}
